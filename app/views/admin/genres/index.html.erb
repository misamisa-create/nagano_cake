<h3>ジャンル一覧・追加</h3>
<!--あとでbootstrapを実装-->
<table>
  <tbody>
    <!--新規入力-->
    <td>ジャンル名</td>
    <td>
      <!--ジャンル名入力-->
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録',class:"btn btn-success" %>
      <% end %>
    </td>
    <!--一覧-->
    <tr>
      <th><strong>ジャンル</strong></th>
    </tr>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する",edit_admin_genre_path(genre) %></td>
    </tr>
    <% end %>
    </tr>
  </tbody>
</table>