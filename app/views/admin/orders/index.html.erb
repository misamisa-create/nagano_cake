<h2>注文履歴一覧</h2>

<table>
  <thead>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
      </tr>
      <tr>
        <td><%= order.customer.full_name %></td>
      </tr>
      <tr>
        <td><%= order.cart_item.amount %></td>
      </tr>
      <tr>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>



