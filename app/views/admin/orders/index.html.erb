<h2>注文履歴一覧</h2>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.set_date %></td>
        <td><%= order.customer.full_name %></td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.amount %>
          <% end %>
        </td>

        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>



