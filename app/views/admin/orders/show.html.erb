<div class="container">
  <div class="row">
    <div class="col-8">
      <table>
        <tr>
          <td>購入者</td>
          <td><%= @order.customer.full_name %></td>
        </tr>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.postal_cord %> <%= @order.address %> <br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= form_with model: @order, url: admin_order_path(@order), method: :patch, local: true do |f| %>
              <%= f.select :status, options_for_select(Order.statuses.to_a), {}, {class: 'mclist__select'} %>
              <%= f.submit "更新", class: 'btn-info' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
          <th>作成ステータス</th>
        </thead>

        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.item.price.to_s(:datetime) %></td>
              <td><%= order_detail.amount %></td>
              <td>
                <%= form_with model :order_detail, url: admin_order_detail_path(@order), local :true do |f| %>
                  <%= f.select :making_status, options_for_select(Order_details.making_statuses.to_a), {}, {class: 'mclist__select'} %>
                  <%= f.submit "更新", class: 'btn-info' %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table>
        <tr>
          <td>合計金額</td>
          <td><%= @total.round.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <td>送料</td>
          <td>800円</td>
        </tr>
        <tr>
          <td>請求金額合計</td>
          <td></td>
        </tr>
      </table>
    </div>

  </div>
</div>