<div class="container">
  <h2>商品新規登録</h2>
  <div class="row">
    <div class="col-5, mx-auto">
      <table>
        <%= form_with model: @item, url:admin_items_path, local: true do |f| %>
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>

          <td><%= f.collection_select :genre_id, @genres, :id, :name, :include_blank => "カテゴリを選択してください" %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :is_active, value: true %>
            <%= f.label :is_active, '販売中', value: true %>
            <%= f.radio_button :is_active, value: false %>
            <%= f.label :is_active, '販売停止中', value: false %>
          </td>
        </tr>
        <tr>
          <td><%= f.submit '新規登録' %></td>
        </tr>
        <% end %>
      </table>
    </div>


  </div>
</div>
