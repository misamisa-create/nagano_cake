<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- js読み込む(訂正の可能性あります) -->
    <!--<script src="jquery.min.js"></script>-->
    <!--<script src="app.js"></script>-->
    <!--ヘッダー-->
    <header>
      <div class="header-area">
        <div class="heading">
          <%= link_to root_path do %>
            <%= image_tag"img/ol_nagano_logo.png",class:"logo"%>

          <% end %>
        </div>
        <nav class="header-nav">
          <ul>
            
              <% if customer_signed_in? %>
              <li><%= link_to ' お店の紹介', homes_about_path,class: 'nav-list-item' %></li>
              <li><%= link_to ' 商品一覧', items_path,class: 'nav-list-item' %></li>
              <li><%= link_to ' ログアウト', destroy_customer_session_path(current_customer),method: :delete, class: 'nav-list-item' %></li>
              <% else %>
              <li><%= link_to ' お店の紹介', homes_about_path,class: 'nav-list-item' %></li>
              <li><%= link_to " 商品一覧", items_path,class: 'nav-list-item' %></li>
              <li><%= link_to ' 新規登録', new_customer_registration_path,class: 'nav-list-item' %></li>
              <li><%= link_to ' ログイン', new_customer_session_path,class: 'nav-list-item' %></li>
              <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
    
    <footer>
      <p>©︎2021 SummerTomato</p>
    </footer>
  </body>
</html>
