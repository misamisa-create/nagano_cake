<h2>商品一覧</h2>
<!--１つの固まり-->
<% @items.each do |item| %>
  <div class="card" style="width: 18rem;">
    <!--画像-->
      <%= link_to item_path(item) do %>
        <!--<div class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">-->
        <!--  <title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/></div>-->
        <div class="card-img-top" width="100%" height="180"><%= attachment_image_tag item, :image, format: 'jpeg' %></div>
      <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= item.name %></h5>
      <p class="card-text">¥<%= item.price.to_s(:delimited) %></p>
    </div>
  </div>
<% end %>

