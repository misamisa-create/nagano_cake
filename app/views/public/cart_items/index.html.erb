<h3>ショッピングカート</h3>
<table class="table">
  <thread>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <!--修正中-->
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= link_to item_path(cart_item.item_id) do %>
          <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "100x100" %>
          <%= cart_item.item.name %>
        <% end %>
      </td>
      <td>
        <%= (cart_item.item.price*1.1).round %>
      </td>
      <td>
        数
      </td>
      <td>
        合計金額
        <!--%= (cart_item.合計金額*1.1).round %>-->
      </td>
      <td>
        <%= link_to "削除する",cart_item_path(cart_item),method: :delete %>
      </td>
    </tr>
    <% end %>
  </thread>

</table>