<h3>ショッピングカート</h3>
<%= link_to "全てを削除する",cart_items_destroy_all_path, method: :delete %><br />
<%= link_to "買い物を続ける",items_path %>

<table class="table">
  <thread>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <!--修正中-->
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= link_to item_path(cart_item.item.id) do %>
          <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "100x100" %>
          <%= cart_item.item.name %>
        <% end %>
      </td>
      <td>
        <!--税込-->
        <%= cart_item.add_tax_price %>
      </td>
      <td>
        <%= form_with model:cart_item,url:cart_item_path(cart_item),method: :patch,local:true do |f| %>
          <%= f.hidden_field :item_id, value:cart_item.item.id %>
          <%= f.number_field :amount,value:cart_item.amount,id:"number",min:"1" %>
          <%= f.submit '数量変更' %>
        <% end %>
      </td>
      <td>
        <!--小計-->
        <%= cart_item.sub_price %>
      </td>
      <td>
        <%= link_to "削除する",cart_item_path(cart_item),method: :delete %>
      </td>
    </tr>
    <% end %>
  </thread>

</table>
<div>
  <p>合計金額</p>
  <%= link_to "注文情報登録", new_order_path, class:"btn btn-info" %>
</div>