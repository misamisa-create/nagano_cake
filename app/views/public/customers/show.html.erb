<div class="container">
  <div class="row mx-auto">
    <h2>！！User information ！！</h2>

    <div class="co-sm-2">
      <div class="btn btn-info">
        <%= link_to "編集", edit_customers_path, class: "btn btn-info" %>
      </div>
        <div class="btn btn-info">
        <%= link_to "注文一覧", orders_path, class: "btn btn-info" %>
      </div>
        <div class="btn btn-info">
        <%= link_to "配送先一覧" , addresses_path, class: "btn btn-info" %>
      </div>
    </div>

    <div class="col-sm-10">
      <h2>会員情報</h2>
  <table class="table table-striped">

	<tbody>
		<tr valign="middle">
		<td width="100">first_name</td>
		<td width="100"><%= current_customer.first_name %></td>
		</tr>
		<tr valign="middle">
		<td width="100">last_name</td>
		<td width="100"><%= current_customer.last_name %></td>
		</tr>
		<tr valign="middle">
		<td width="200">first_name_kana</td>
		<td width="200"><%= current_customer.first_name_kana %></td>
		</tr>
		<tr valign="middle">
		<td width="100">last_name_kana</td>
		<td width="100"><%= current_customer.last_name_kana %></td>
		</tr>
		<tr valign="middle">
		<td width="100">email</td>
		<td width="100"><%= current_customer.email %></td>
		</tr>
		<tr valign="middle">
		<td width="100">postal_code</td>
		<td width="100"><%= current_customer.postal_code %></td>
		</tr>
		<tr valign="middle">
		<td width="100">address</td>
		<td width="100"><%= current_customer.address %></td>
		</tr>
		<tr valign="middle">
		<td width="100">telephone_number</td>
		<td width="100"><%= current_customer.telephone_number %></td>
		</tr>
		<tr valign="middle">
		<td width="100">customer_status</td>
		<td width="100" class="btn btn-success">
			<% if current_customer.is_deleted? %>
			退会済み
			<% else %>
			有効会員
			<% end %>
		</td>
		</tr>
	</tbody>

</table>


    </div>
  </div>
</div>