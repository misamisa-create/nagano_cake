
<!-- 注文確認画面へ -->
<div class="container">
  <div class="row">

      <div class="col-11">
            <h6 class="pb-5"><strong>注文情報入力</strong></h6>

          <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
            <P><strong>支払方法</strong></P>
            <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
            <%= f.label :payment_method, "クレジットカード" %></br>
            <%= f.radio_button :payment_method, :銀行振込 %>
            <%= f.label :payment_method, "銀行振込" %>
            <br>
          
            <p><strong>お届け先</strong></p>
            <!-- 新しいカラム作る！（address_option）
          
            ラジオボタンが一つしか選択できないように、labelは全部これ！ -->
            <%= f.radio_button :address_option, 0 %>
            <!-- またまた新しいカラム作成！（ordre_address）
            ここに保存されたのが、配送先の住所 -->
            <%= f.label :order_address, "ご自身の住所" %><br>
            <%= current_customer.postal_code %>
            <%= current_customer.address %><br>
            <%= current_customer.full_name %>
            <br>
          
            <%= f.radio_button :address_option, 1 %>
            <%= f.label :order_address, "登録済み住所から登録" %><br>
            <%= f.collection_select :order_address , current_customer.addresses, :id, :address , :include_blank => "選択してください", class: "form-control",size: "20x40" %>
            <br>
          
            <%= f.radio_button :address_option, 2 %>
            <%= f.label :order_address, "新しいお届け先" %><br>
          <table>
            	<thead>
            		<tr>
            			<th width="200"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></th>
            			<th width="300"><%= f.text_field :postal_code, class: "form-control ", size: "20x20" %></th>
            		</tr>
            		</thead>
            		<tbody>
            		<tr>
            			<th><%= f.label :address_option, "住所" %></th>
            			<th><%= f.text_field :order_address, class: "form-control " %></th>
            		</tr>
            		<tr>
            			<th><%= f.label :name, "宛名" %></th>
            			<th><%= f.text_field :name, class: "form-control " %></th>
            		</tr>
            	</tbody>
            </table>
            
            <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
          
          <% end %>
       </div>
    </div>
  </div>
