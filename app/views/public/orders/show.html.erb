<div class="container">
  <div class="row">
    <div class="col-6">

    <h1>注文詳細ページ</h1>
      <table class="table table-bordered">
        <tr>
        <th>配送先(お届け先)</th>
        <td>
        <div><%= @order.address %></div>
        <div><%= @order.name %></div>
        </td>
        </tr>
        <tr>
        <th>支払方法</th>
         <td><%= @order.payment_method %></td>
        </tr>
        <tr>
         <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
     </table>

      <h3>請求額</h3>
         <table class="table table-bordered">

        <tr>
        <th>送料</th>
        <td>
        <div><%= @order.shipping_cost %></div>
        </td>
        </tr>
        <tr>
        <th>商品合計金額</th>
         <td><%= (@order.total_payment.to_i - @order.shipping_cost).to_i %> </td>
        </tr>
        <tr>
         <th>請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
      </div>


    <div class="col-6">
      <h4 class="pt-10">購入商品(内訳)</h4>
       <table class="table table-bordered">

        <thead>
          <th width="200">商品名</th>
          <th width="250">単価（税込み）</th>
          <th width="100">数量</th>
          <th width="100">小計</th>
        </thead>

        <tbody>
            <tr>
              <td><%= @order_detail.item.name %></td>
              <td><%= @order_detail.price%></td>
              <td><%= @order_detail.amount %></td>
              <td><%= @order_detail.price * @order_detail.amount %></td>
            </tr>

        </tbody>
      </table>
</div>
  </div>
    </div>
