<div class="container">
  <div class="row">
      <h6>注文情報の確認</h6>
    <div class="col-6">

 　　　<table class="table table-bordered">
        <thead>
          <th width="100">商品名</th>
          <th width="200">単価（税込み）</th>
          <th width="100">数量</th>
          <th width="100">小計</th>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= @total %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
   </div>
    <div class="col-3">
    <table class="table table-bordered">

        <tr>
        <th>送料</th>
        <td>
        <div><%= @order.shipping_cost %></div>
        </td>
        </tr>
        <tr>
        <th>商品合計金額</th>
         <td><%= @total %>
        </tr>
        <tr>
         <th>請求額</th>
          <td><%= (@total + @order.shipping_cost).to_i %></td>
        </tr>
      </table>  
      </div>

        <div class="col-6">

        <h6>支払方法</h6>
         <%= @order.payment_method %>
         
　　　　<h6>配送先(お届け先)</h6>
         <%= @order.address %>
         <%= @order.name %>
        
          <%= form_with model: @order, url: orders_path , method: :post, local: true do |f| %>
          <%= f.hidden_field :postal_code, :value => @order.postal_code %>
          <%= f.hidden_field :address, :value => @order.address %>
          <%= f.hidden_field :name, :value => @order.name %>
          <%= f.hidden_field :total_payment, :value => @total.to_i + @order.shipping_cost.to_i %>
          <%= f.submit "注文完了", class: "btn btn-info center-block" %>
          <% end %>
      </div>
  </div>
</div>

