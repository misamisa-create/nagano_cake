<table class="table">
    <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
    </thead>

    <tbody>
        <!--修正中-->
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td>
                <%= cart_item.item.name %>
            </td>
            <td>
                <!--税込-->
                <%= cart_item.add_tax_price %>
            </td>
            <td>
                <!--小計-->
               <%= cart_item.sub_price %>
             </td>
        </tr>
        <% end %>
    </tbody>
